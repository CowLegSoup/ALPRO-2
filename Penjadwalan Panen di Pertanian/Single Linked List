class Node:
    def _init_(self, tanaman, hari_panen):
        self.tanaman = tanaman
        self.hari_panen = hari_panen
        self.next = None

class JadwalPanen:
    def _init_(self):
        self.head = None
        self.size = 0  # Tambahkan variabel untuk menyimpan jumlah tanaman
    
    def tambah_tanaman(self, tanaman, hari_panen):
        new_node = Node(tanaman, hari_panen)
        if not self.head:
            self.head = new_node
        else:
            current = self.head
            while current.next and current.next.hari_panen <= hari_panen:
                current = current.next
            new_node.next = current.next
            current.next = new_node
        self.size += 1  # Tambahkan 1 ke ukuran linked list
    
    def hapus_tanaman(self, tanaman):
        current = self.head
        prev = None
        while current:
            if current.tanaman == tanaman:
                if prev:
                    prev.next = current.next
                else:
                    self.head = current.next
                self.size -= 1  # Kurangi ukuran linked list saat ada yang dihapus
                return True
            prev = current
            current = current.next
        return False
    
    def prioritas_tanaman(self, tanaman):
        current = self.head
        prev = None
        while current:
            if current.tanaman == tanaman:
                hari_panen_baru = int(input(f"Masukkan hari ke berapa panen untuk {tanaman}: "))
                if prev:
                    prev.next = current.next
                else:
                    self.head = current.next
                current.hari_panen = hari_panen_baru
                self.tambah_tanaman(current.tanaman, current.hari_panen)
                return
            prev = current
            current = current.next

    def length(self):  # Method untuk menghitung jumlah tanaman
        return self.size

    def tampilkan_jadwal(self):
        current = self.head
        hasil = []
        while current:
            hasil.append(f"{current.tanaman} - Panen Hari ke-{current.hari_panen}")
            current = current.next
        return "\n".join(hasil)

# Program utama dengan input dari pengguna
jadwal = JadwalPanen()
while True:
    print("\nMenu:")
    print("1. Tambah tanaman")
    print("2. Hapus tanaman")
    print("3. Prioritaskan tanaman")
    print("4. Lihat jadwal panen")
    print("5. Lihat jumlah tanaman dalam jadwal")
    print("6. Keluar")
    pilihan = input("Pilih menu: ")
    
    if pilihan == "1":
        tanaman = input("Masukkan nama tanaman: ")
        hari_panen = int(input("Masukkan hari ke berapa panen: "))
        jadwal.tambah_tanaman(tanaman, hari_panen)
        print(f"{tanaman} telah ditambahkan ke jadwal panen.")
    elif pilihan == "2":
        tanaman = input("Masukkan nama tanaman yang ingin dihapus: ")
        if jadwal.hapus_tanaman(tanaman):
            print(f"{tanaman} berhasil dihapus dari jadwal panen.")
        else:
            print(f"{tanaman} tidak ditemukan dalam jadwal.")
    elif pilihan == "3":
        tanaman = input("Masukkan nama tanaman yang ingin diprioritaskan: ")
        jadwal.prioritas_tanaman(tanaman)
        print(f"{tanaman} telah diprioritaskan dalam jadwal panen.")
    elif pilihan == "4":
        print("\nJadwal Panen:")
        print(jadwal.tampilkan_jadwal())
    elif pilihan == "5":
        print(f"Jumlah tanaman dalam jadwal panen: {jadwal.length()}")  # Tambahkan opsi melihat jumlah tanaman
    elif pilihan == "6":
        print("Keluar dari program.")
        break
    else:
        print("Pilihan tidak valid.")
